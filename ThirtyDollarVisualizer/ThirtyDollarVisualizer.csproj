<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
        <None Remove="shader.frag" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="shader.vert" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="OpenTK" Version="4.8.0" />
        <PackageReference Include="SixLabors.ImageSharp" Version="3.0.1" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="Assets\Textures\moai.png">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <None Remove="Assets\Fonts\VarelaRound-Regular.ttf" />
        <Content Include="Assets\Fonts\VarelaRound-Regular.ttf">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <None Remove="Assets\Shaders\shader.frag" />
        <Content Include="Assets\Shaders\shader.frag">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <None Remove="Assets\Shaders\shader.vert" />
        <Content Include="Assets\Shaders\shader.vert">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <None Remove="Assets\Shaders\colored.frag" />
        <Content Include="Assets\Shaders\colored.frag">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <None Remove="Assets\Shaders\colored.vert" />
        <Content Include="Assets\Shaders\colored.vert">
          <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>


    </ItemGroup>




</Project>
